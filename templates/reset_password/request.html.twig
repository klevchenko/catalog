{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="">
                    <div class="card bg-light mb-3 mt-5" style="width: 800px;">

                        <div class="card-body">

                            <h4 class="p-3">Скинути пароль</h4>

                            {% for flashError in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}

                            {{ form_start(requestForm) }}
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>

                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    <small>
                                        Введіть свою адресу електронної пошти, і ми надішлемо вам посилання для скидання пароля.
                                    </small>
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                    <button type="submit" class="btn btn-primary">Скинути пароль</button>
                                </div>
                            </div>
                            {{ form_end(requestForm) }}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}