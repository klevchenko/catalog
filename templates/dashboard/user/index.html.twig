{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-3">
                {% include '@dashboard/sidebar.html.twig' %}
            </div>
            <div class="col-md-12 col-lg-9">

                <nav class="navbar navbar-light bg-light mb-3">
                    <a class="navbar-brand">Users</a>
                    <div class="form-inline">
                        <a href="{{ path('app_new_users') }}" type="button" class="form-control btn btn-primary">New user</a>
                    </div>
                </nav>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
{#                            <th scope="col">Name</th>#}
                            <th scope="col">Email</th>
                            <th scope="col">Group</th>
                            <th scope="col"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
{#                                <td>{{ user.firstname }} {{ user.lastname }}</td>#}
                                <td>{{ user.email }}</td>
                                <td>{{ user.ugroup }}</td>
                                <td class="text-right">
                                    <a href="{{ path('app_edit_users', {'id': user.id}) }}" class="btn btn-light"><i class="fas fa-pen"></i></a>
                                    <a onclick="return confirm('Are you sure?') ? true : false;" href="{{ path('app_delete_user', {'id': user.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}