{# templates/admin/index.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-3">
                <a href="{{ path('app_users') }}" type="button" class="btn btn-secondary d-block mb-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
            </div>
            <div class="col-md-12 col-lg-9">
                <div class="card bg-light mb-3" >
                    <div class="card-body">

                        <h4 class="p-3">{{ form_title }}</h4>

                        {{ form_start(form) }}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.number, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        {% if is_user_admin %}
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.u_group, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        {% endif %}

                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.password, {'attr': {'class':
                                    'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <button type="submit" class="btn btn-primary">
                                    {{ submit_btn_text }}
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}