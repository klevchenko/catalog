{# templates/admin/index.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-3">
                <a href="{{ path('app_catalogs') }}" type="button" class="btn btn-secondary d-block mb-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
            </div>
            <div class="col-md-12 col-lg-9">
                <div class="card bg-light mb-3">
                    <div class="card-body">

                        <h4 class="p-3">{{ form_title }}</h4>

                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {% if form_errors(form) %}
                                    <div class="alert alert-danger">
                                        {{ form_errors(form) }}
                                    </div>
                                {% endif %}

                                {% include '@admin/flashes.html.twig' %}
                            </div>
                        </div>

                        {{ form_start(form) }}

                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.upload_file, {'attr': {'class': 'form-control p-1'}}) }}

                                    <small class="form-text text-muted">
                                        Приклад структури файла
                                        <table class="table table-bordered">
                                            <tr>
                                                <td>A0000000</td>
                                                <td>xxxxxxx</td>
                                                <td>100</td>
                                            </tr>
                                        </table>
                                    </small>
                                    
                                </div>
                            </div>

                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.send, {'attr': {'class': 'form-control btn-primary btn-block'}}) }}
                                </div>
                            </div>


                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}